        <section class="content-main">
            <div class="content-header">
                <div>
                    <h3 class="content-title card-title">Manage coupon</h3>
                </div>
                <div>
                    <!-- <input type="text" placeholder="Search order ID" class="form-control bg-white"> -->
                    <a class="btn btn-sm" href="/admin/add-coupon">Add coupon</a>
                </div>
            </div>
            <div class="card mb-4">
           <div class="card-body">
                  <div class="table-responsive">
                      <table class="table table-hover" id="couponTable">
                        <% if(!coupons) {%>
                          <h5>No coupons available</h5>
                          <%} else if (coupons.length === 0) {%> 
                            <h5>No coupons available</h5>
                            <%} else {%> 
                          <thead>
                              <tr>
                                  <th>Coupon_No</th>
                                  <th scope="col">Description</th>
                                  <th scope="col">Discount Amount</th>
                                  <th scope="col">Minimum Purchase</th>
                                  <th scope="col">Expiry Date</th>
                                  <th scope="col" class="text-center"> Action </th>
                              </tr>
                          </thead>
                          <tbody>
                              <% coupons.reverse().forEach(coupon => {%> 
                              <tr>
                                  <td><%= coupon.couponCode %></td>
                                  <td><%= coupon.description %></td>
                                  <td><%= coupon.discountAmount %></td>
                                  <td><%= coupon.minimumPurchase %></td>
                                  <td><%= coupon.expiryDate.toLocaleDateString() %></td>
                                  <td class="text-center">
                                    <a class="btn btn-sm" href="/admin/edit-coupon/<%= coupon._id%>">Edit</a>
                                    <% if(coupon.status === 'Unblock') {%> 
                                      <a class="btn btn-md" href="/admin/block-coupon/<%= coupon._id %>">Block</a>
                                      <%} else if (coupon.status === 'Block') {%>
                                        <a class="btn btn-md" style="background-color: #b61300; color: #fff;" href="/admin/unblock-coupon/<%= coupon._id %>">Unblock</a>
                                        <%} %>
                                  </td>
                              </tr>
                              <%}) %>
                          </tbody>
                          <%} %>
                      </table>
                  </div> <!-- table-responsive //end -->
              </div> <!-- card-body end// -->
          </div> <!-- card end// -->
         </section> <!-- content-main end// -->
