        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Courses List</h2>
                    <%if (typeof message !== 'undefined') {%>
                        <p class="text-center" style="color:red;"><%= message %></p>
                    <%}%>
                    <%if (typeof error !== 'undefined') {%>
                        <p class="text-center" style="color:red;"><%= error %></p>
                    <%}%>
                </div>
                
                <div>
                    <a href="/creator/creatorUpload" class="btn btn-primary btn-sm rounded">Add Course</a>
                </div>
            </div>
            <div class="card mb-4">

                <div class="card-body">
                    <article class="itemlist">
                    </article>
                </div> 

                <div class="container">
                    <!-- <h3>Course List</h3> -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Photo</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Author</th>
                                <th scope="col">Duration in hr</th>
                                <th scope="col">No Of Lessons</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% coursedata.forEach(course => { %> 
                                <tr>
                                    <td><img src="<%=course.courseImg[0]%>" class="img-sm " alt="Item" height="68" width="68"></td>
                                    <td><%= course.courseName %></td>
                                    <td><%= course.courseAmount %></td>
                                    <td><%= course.courseAuthor %></td>
                                    <td><%= course.courseDuration %></td>
                                    <td><%= course.courseLessonNos %></td>
                                    <td>
                                        <a href="/creator/edit-course/<%= course._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>
                                        <a href="/creator/delete-course/<%= course._id %>" class="btn btn-sm font-sm btn-light rounded">
                                            <i class="material-icons md-delete_forever"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

            </div> 

            

