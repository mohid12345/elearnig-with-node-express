        function copyToClipboard(code) {
            navigator.clipboard.writeText(code).then(()=> {
                Swal.fire({
                position: 'center',
                icon: 'success',
                title: "Coupon Code copied to Clipboard",
                showConfirmButton: false,
                timer: 1500
                });
            }).catch(err=>{
                console.error('Unable to copy to clipboard', error);
            });
        }
    </script>

