                                <% } else { %>

                            <div class="table-responsive">
                                <table class="table shopping-summery text-center">
                                    <thead>
                                        <tr class="main-heading">
                                            <th scope="col" colspan="2">Course</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Author</th>
                                            <th scope="col">Action</th>
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% wishlistDetails.courses.forEach(course => { %>
                                        <tr>
                                            <td class="image course-thumbnail"><img src="<%= course.courseId.courseImg[0] %>" alt="#"></td>
                                            <td class="course-des course-name">
                                                <h5 class="course-name"><a href="shop-course-right.html"><%= course.courseId.courseName %></a></h5>
                                                <!-- <p class="font-xs">Maboriosam in a tonto nesciung eget<br> distingy magndapibus. -->
                                                </p>
                                            </td>
                                            <td class="price" data-title="Price"><span><%= course.courseId.courseAmount%> </span></td>
                                            <td class="text-center" data-title="Stock">
                                                <span class="color3 font-weight-bold"><%= course.courseId.courseAuthor %></span>
                                            </td>
                                            <td class="text-right" data-title="Cart">
                                                <% if(course.courseId) {%>
                                                        <a aria-label="Buy now" class="btn btn-sm hover-up addingcart-btn" data-course-id="<%= course.courseId._id %>" id="addingcart">
                                                            <i class="fi-rs-shopping-bag-add"> Add to Cart</i>
                                                        </a>
                                                        <%} %>
                                                
                                            </td>
                                            <td class="action" data-title="Remove"><a href="/delete-wishlist?courseId=<%= course.id %>" class="text-muted"><i class="fi-rs-trash"></i></a></td>
                                            </tr>


                                            
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const addingcartButtons = document.querySelectorAll(".addingcart-btn");
    
            addingcartButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const courseId = button.getAttribute("data-course-id");
                    fetch(`/addCartFrom?courseId=${courseId}`, {
                        method: 'POST',
                        headers: {
                            'content-Type': 'application/json',
                        },
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Check if the response contains a message
                        if (data.message) {
                            // Display Sweet Alert
                            Swal.fire({
                                icon: 'success',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 1500
                            });
                        }
                    })
                    .catch(error => {
                        console.error("Error adding to cart", error);
                    });
                });
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

                                    
